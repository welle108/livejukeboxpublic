<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings"
        android:layout_width="259dp"
        android:layout_height="98dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Settings"
        app:layout_constraintBottom_toTopOf="@+id/button_guidline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toLeftOf="@id/right_guideline"
        app:layout_constraintStart_toEndOf="@+id/song_list"
        app:layout_constraintTop_toTopOf="@+id/song_list"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/song_list"
        android:layout_width="259dp"
        android:layout_height="98dp"
        android:text="Songlist"
        app:layout_constraintBottom_toTopOf="@id/button_guidline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintLeft_toRightOf="@id/left_guideline"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="863dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/button_guidline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".88" />

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="557dp"
        android:layout_height="278dp"
        android:layout_marginTop="297dp"
        android:layout_marginBottom="705dp"
        android:autoSizeTextType="uniform"
        android:text="Welcome to LiveJukeBox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/left_guideline"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>